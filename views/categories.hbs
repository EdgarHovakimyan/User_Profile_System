<h1>categories</h1>
<table border="2">
    <thead>
        <tr>
            <th>Name</th>
            <th>Image</th>
            <th>See</th>
        </tr>
    </thead>
    <tbody>
        {{#each categories}}
            <tr>
                <td>{{name}}</td>
                <td><img src="/{{image}}" width="100" alt=""></td>
                <td><a href="/user/category/{{id}}">see</a></td>
            </tr>
        {{/each}}
    </tbody>
</table>
